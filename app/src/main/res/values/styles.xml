<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorAccent">@color/orange_light</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/orange_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PageStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- TEXT SIZES -->
    <style name="PageTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">60sp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="SubtitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">40sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="GenericButton" parent="@android:style/Widget.DeviceDefault.Button.Colored">
        <item name="android:width">450dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="MenuItems">MenuItems>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">60sp</item>
        <!--<item name="android:layout_marginBottom">6dp</item>-->
        <!--<item name="android:paddingLeft">8dp</item>-->
    </style>

</resources>
